<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.mouzakis.arisurfacepro.studentmessagingapplication.PostingActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/subject_of_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/post_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/subject_of_post"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/posting_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subject_of_post">

        <EditText
            android:id="@+id/post_question_text"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:hint="@string/post_question_text"
            android:layout_marginBottom="22dp"
            android:textAlignment="textStart"
            android:gravity="start"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/post_question_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/posting_question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:fabSize="normal"/>

</RelativeLayout>
