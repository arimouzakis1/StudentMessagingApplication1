    <TextView
        android:id="@+id/post_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Margin vs Padding!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/postee_name"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1/1/2000"
        android:textStyle="italic"
        android:layout_below="@+id/post_heading"/>

    <TextView
        android:id="@+id/post_time"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="9:00am"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/post_date"
        android:layout_below="@+id/post_heading"/>

    <Button
        android:id="@+id/delete_post_button"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="@string/delete_post"
        android:textStyle="italic"
        android:textSize="10sp"
        android:layout_alignBaseline="@+id/post_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>


</RelativeLayout>