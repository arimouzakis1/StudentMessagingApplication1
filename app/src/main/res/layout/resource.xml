<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/resource_postee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ari Mouzakis"
        android:layout_marginBottom="6dp"/>


    <TextView
        android:id="@+id/resource_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Margin vs Padding!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/resource_postee_name"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/resource_hyperlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="http://helloworld.com"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/com_facebook_blue"
        android:layout_below="@+id/resource_description"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/resource_post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1/1/2000"
        android:textStyle="italic"
        android:textSize="12sp"
        android:layout_below="@+id/resource_hyperlink"/>

    <TextView
        android:id="@+id/resource_post_time"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="9:00am"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/resource_post_date"
        android:textSize="12sp"
        android:layout_below="@+id/resource_hyperlink"/>


</RelativeLayout>